{% extends 'indexFront.html.twig' %}

{% block body %}
    <div class="w3ls-title">
        <h3 class="agileits-title">Project</h3>
    </div>

    <table class="table table-condensed">
        <tbody>

            <tr>
                <th>Projectname</th>
                <td>{{ project.projectName }}</td>
            </tr>
            <tr>
                <th>Activityarea</th>
                <td>{{ project.activityarea }}</td>
            </tr>
            <tr>
                <th>Projectdescription</th>
                <td>{{ project.projectdescription }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if project.startdate %}{{ project.startdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if project.enddate %}{{ project.enddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Payment</th>
                <td>{{ project.payment }}</td>
            </tr>
            <tr>
                <th>Experiencelevel</th>
                <td>{{ project.experiencelevel }}</td>
            </tr>
            <tr>
                <th>Requiredskills</th>
                <td>{{ project.requiredskills }}</td>
            </tr>
        </tbody>
    </table>

    <ul>

            <a href="{{ path('projects_index') }}" class="btn btn-default"><i class="fa fa-reorder" style=""></i> Back to the list</a>


            <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-default"><i class="fa fa-edit" style=""></i>  Edit</a>


            <a href="{{ path('freelancer_index') }}" class="btn btn-default"> Candidates list</a>

    <div class="col-md-1">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default">
            {{ form_end(delete_form) }}
    </div>
    </ul>
{% endblock %}
