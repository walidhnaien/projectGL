{% extends 'indexFront.html.twig' %}

{% block body %}
    <div class="w3ls-title">
        <h3 class="agileits-title">Jobowners list</h3>
    </div>
    <table>
        <thead>
            <tr>

                <th>Activity Area</th>
                <th>Social reason</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Mobile</th>
                <th>Email</th>


                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jobowner in jobowners %}
            <tr>
               <!-- <td><a href="{{ path('jobowner_show', { 'id': jobowner.id }) }}">{{ jobowner.id }}</a></td>-->
                <td>{{ jobowner.activitySector }}</td>
                <td>{{ jobowner.socialRaison }}</td>
                <td>{{ jobowner.firstname }}</td>
                <td>{{ jobowner.lastname }}</td>
                <td>{{ jobowner.address }}</td>
                <td>{{ jobowner.mobile }}</td>
                <td>{{ jobowner.user.email }}</td>



                <td>
                    <ul>
                            <a href="{{ path('jobowner_show', { 'id': jobowner.id }) }}">show</a>

                            <a href="{{ path('jobowner_edit', { 'id': jobowner.id }) }}">edit</a>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
            <a href="{{ path('jobowner_new') }}">Create a new jobowner</a>

    </ul>
{% endblock %}
