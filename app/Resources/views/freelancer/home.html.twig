{% extends 'indexFront.html.twig' %}

{% block body %}

    <div class="w3ls-title">
        <h3 class="agileits-title">Projects list</h3>
    </div>

    <form>
        <div class="col-md-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Find a Project" name="search" onchange="this.form.submit()">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
    </form>
    <table class="table table-condensed" >
    <thead>
    <tr>
        <th>Projectname</th>
        <th>Activityarea</th>
        <th>Projectdescription</th>
        <th>Startdate</th>
        <th>Enddate</th>
        <th>Payment</th>
        <th>Experiencelevel</th>
        <th>Requiredskills</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for project in projects %}
        <tr>
            <td>{{ project.projectName }}</td>
            <td>{{ project.activityarea }}</td>
            <td>{{ project.projectdescription }}</td>
            <td>{% if project.startdate %}{{ project.startdate|date('Y-m-d') }}{% endif %}</td>
            <td>{% if project.enddate %}{{ project.enddate|date('Y-m-d') }}{% endif %}</td>
            <td>{{ project.payment }}</td>
            <td>{{ project.experiencelevel }}</td>
            <td>{{ project.requiredskills }}</td>
            <td>
                <a class="btn btn-default" href="{{ path('projects_show', { 'id': project.id }) }}"><i class="fa fa-eye"></i> show</a>

            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock body %}
    {% block demandef %}
        <div class="w3ls-title">
            <h3 class="agileits-title">Demand Freelancer</h3>
        </div>

        <table class="table table-condensed" >
        <thead>
        <tr>
            <th>Demande Date</th>
            <th>Demande Description</th>
            <th>Demande status</th>

        </tr>
        </thead>
        <tbody>
        {% for d in demandes %}
            <tr>
                <td>{% if d.demandDate %}{{ d.demandDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ d.Description }}</td>
                <td>{{ d.demandstatus }}</td>

                <td>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock demandef %}